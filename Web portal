<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Portal Login</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom styles for background and font */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0F172A; /* Slate 900 */
        }
        /* Style for the button hover effect */
        .login-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.5), 0 4px 6px -2px rgba(59, 130, 246, 0.2);
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">

    <!-- Login Card Container -->
    <div id="login-card" class="bg-white dark:bg-gray-800 p-8 sm:p-10 rounded-xl shadow-2xl w-full max-w-md transition-all duration-300">

        <!-- Header -->
        <div class="text-center mb-8">
            <svg class="mx-auto h-12 w-12 text-indigo-600 dark:text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
            </svg>
            <h2 class="mt-4 text-3xl font-extrabold text-gray-900 dark:text-white">
                Portal Sign In
            </h2>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                Access your personalized dashboard.
            </p>
        </div>

        <!-- Login Form -->
        <form id="login-form" class="space-y-6">
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Email Address
                </label>
                <input id="email" name="email" type="email" autocomplete="email" required
                    placeholder="user@example.com"
                    class="appearance-none block w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white sm:text-sm">
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    Password
                </label>
                <input id="password" name="password" type="password" autocomplete="current-password" required
                    placeholder="••••••••"
                    class="appearance-none block w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white sm:text-sm">
            </div>

            <!-- Status Message Area -->
            <div id="status-message" role="alert" class="hidden p-3 rounded-lg text-center text-sm"></div>

            <!-- Action Button -->
            <div>
                <button type="submit"
                    class="login-button w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Sign In
                </button>
            </div>
        </form>

        <!-- Footer Links -->
        <div class="mt-6 text-center text-sm">
            <div class="flex justify-between">
                <a href="#" onclick="showForgotPassword(event)" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
                    Forgot Password?
                </a>
                <a href="#" onclick="showSignup(event)" class="font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200">
                    Don't have an account? <span class="text-indigo-600 dark:text-indigo-400 font-semibold">Sign Up</span>
                </a>
            </div>
        </div>
    </div>

    <!-- JavaScript for Mock Authentication -->
    <script>
        // GLOBAL: Variable to store the original state of the card's inner HTML
        let originalCardContent = document.getElementById('login-card').innerHTML;

        // --- Core Functions ---

        // Function to reset the portal back to the login form
        function resetPortal() {
            const card = document.getElementById('login-card');
            // Restore the original content
            card.innerHTML = originalCardContent;
            card.classList.remove('shadow-xl');
            card.classList.add('shadow-2xl');
            
            // Re-attach the submit listener to the form
            document.getElementById('login-form').addEventListener('submit', handleLoginSubmit);
        }

        // Handles the initial login attempt (MOCK)
        function handleLoginSubmit(event) {
            event.preventDefault();

            const emailInput = document.getElementById('email').value;
            const passwordInput = document.getElementById('password').value;
            const statusMessage = document.getElementById('status-message');

            // Define mock credentials for demonstration
            const MOCK_EMAIL = "user@portal.com";
            const MOCK_PASSWORD = "password123";

            // Reset status message
            statusMessage.classList.add('hidden');
            statusMessage.textContent = '';
            statusMessage.className = 'p-3 rounded-lg text-center text-sm';

            // Simple mock authentication check
            if (emailInput === MOCK_EMAIL && passwordInput === MOCK_PASSWORD) {
                statusMessage.textContent = 'Login Successful! Redirecting...';
                statusMessage.classList.remove('hidden');
                statusMessage.classList.add('bg-green-100', 'text-green-800', 'dark:bg-green-900', 'dark:text-green-200');

                // Simulate dashboard transition
                setTimeout(() => {
                    const card = document.getElementById('login-card');
                    card.innerHTML = `
                        <div class="text-center p-8 space-y-8">
                            <h2 class="text-3xl font-extrabold text-indigo-600 dark:text-indigo-400">Welcome Back!</h2>
                            <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
                                You are now authenticated and viewing your personalized content.
                            </p>
                            <p class="mt-6 text-sm text-gray-500 dark:text-gray-400">
                                (This demonstrates the successful transition into the portal.)
                            </p>
                            
                            <!-- Sign Out Button -->
                            <button onclick="resetPortal()" class="w-full mt-6 flex items-center justify-center py-2 px-4 border border-transparent rounded-lg text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition duration-150 ease-in-out">
                                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                </svg>
                                Sign Out / Go Back to Login
                            </button>
                        </div>
                    `;
                    card.classList.remove('shadow-2xl');
                    card.classList.add('shadow-xl');
                }, 3000);

            } else {
                // Failed login
                statusMessage.textContent = 'Invalid credentials. Please try again.';
                statusMessage.classList.remove('hidden');
                statusMessage.classList.add('bg-red-100', 'text-red-800', 'dark:bg-red-900', 'dark:text-red-200');
            }
        }

        // --- Sign Up Logic ---

        function showSignup(event) {
            event.preventDefault();
            const card = document.getElementById('login-card');
            card.innerHTML = `
                <div class="text-center mb-8">
                    <h2 class="mt-4 text-3xl font-extrabold text-gray-900 dark:text-white">Create Account</h2>
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        Join the portal and start exploring.
                    </p>
                </div>
                <form id="signup-form" class="space-y-6">
                    <div>
                        <label for="new-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email Address</label>
                        <input id="new-email" name="new-email" type="email" required placeholder="new.user@example.com"
                            class="appearance-none block w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white sm:text-sm">
                    </div>
                    <div>
                        <label for="new-password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Password</label>
                        <input id="new-password" name="new-password" type="password" required placeholder="8+ characters"
                            class="appearance-none block w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white sm:text-sm">
                    </div>
                    <div id="signup-status-message" role="alert" class="hidden p-3 rounded-lg text-center text-sm"></div>
                    <div>
                        <button type="submit" class="login-button w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out">
                            Sign Up
                        </button>
                    </div>
                </form>
                <div class="mt-6 text-center text-sm">
                    <a href="#" onclick="resetPortal(event)" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
                        Back to Sign In
                    </a>
                </div>
            `;
            document.getElementById('signup-form').addEventListener('submit', handleSignupSubmit);
        }

        function handleSignupSubmit(event) {
            event.preventDefault();
            const statusMessage = document.getElementById('signup-status-message');
            
            // Simulating successful registration
            statusMessage.textContent = 'Account created successfully! Redirecting to login...';
            statusMessage.classList.remove('hidden', 'bg-red-100', 'text-red-800');
            statusMessage.classList.add('bg-green-100', 'text-green-800', 'dark:bg-green-900', 'dark:text-green-200');

            // In a real app, this would be a network call. We simulate a delay then go back to login.
            setTimeout(resetPortal, 3000);
        }

        // --- Forgot Password Logic ---

        function showForgotPassword(event) {
            event.preventDefault();
            const card = document.getElementById('login-card');
            card.innerHTML = `
                <div class="text-center mb-8">
                    <h2 class="mt-4 text-3xl font-extrabold text-gray-900 dark:text-white">Forgot Password</h2>
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        Enter your email to receive a password reset link.
                    </p>
                </div>
                <form id="recovery-form" class="space-y-6">
                    <div>
                        <label for="recovery-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email Address</label>
                        <input id="recovery-email" name="recovery-email" type="email" required placeholder="your.email@example.com"
                            class="appearance-none block w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white sm:text-sm">
                    </div>
                    <div id="recovery-status-message" role="alert" class="hidden p-3 rounded-lg text-center text-sm"></div>
                    <div>
                        <button type="submit" class="login-button w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                            Send Reset Link
                        </button>
                    </div>
                </form>
                <div class="mt-6 text-center text-sm">
                    <a href="#" onclick="resetPortal(event)" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
                        Back to Sign In
                    </a>
                </div>
            `;
            document.getElementById('recovery-form').addEventListener('submit', handlePasswordRecovery);
        }

        function handlePasswordRecovery(event) {
            event.preventDefault();
            const email = document.getElementById('recovery-email').value;
            const statusMessage = document.getElementById('recovery-status-message');

            // Simulating a successful password reset request
            statusMessage.textContent = `If ${email} is a valid account, a reset link has been sent.`;
            statusMessage.classList.remove('hidden', 'bg-red-100', 'text-red-800');
            statusMessage.classList.add('bg-green-100', 'text-green-800', 'dark:bg-green-900', 'dark:text-green-200');

            // Simulate delay then go back to login
            setTimeout(resetPortal, 5000);
        }


        // Initial attachment of the listener to the login form
        document.getElementById('login-form').addEventListener('submit', handleLoginSubmit);
    </script>
</body>
</html>
